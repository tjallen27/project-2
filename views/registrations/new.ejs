<form method="POST" action="/register">
  <div class="form-group row">
    <label for="pubName">Pub Name</label><br>
    <input type="text" name="pubName" class="form-control col-md-4"  id="pubName">
  </div>
  <div class="form-group row">
    <label for="email">Email</label><br>
    <input type="email" name="email"  class="form-control col-md-4"  id="email">
  </div>
  <div class="form-group row">
    <label for="streetNumber">Street Number</label><br>
    <input type="text" name="streetNumber"  class="form-control col-md-4" id="streetNumber">
  </div>
  <div class="form-group row">
    <label for="street">Street</label><br>
    <input type="text" name="street"  class="form-control col-md-4" id="street">
  </div>
  <div class="form-group row">
    <label for="city">City</label><br>
    <input type="text" name="city"  class="form-control col-md-4" id="city">
  </div>
  <div class="form-group row">
    <label for="postcode">Postcode</label><br>
    <input type="text" name="postcode"  class="form-control col-md-4" id="postcode">
  </div>
  <div class="form-group row">
    <label for="country">Country</label><br>
    <input type="text" name="country"  class="form-control col-md-4" id="country">
  </div>
  <div class="form-group row">
    <label for="password">Password</label><br>
    <input type="password" name="password"  class="form-control col-md-4" id="password">
  </div>
  <div class="form-group row">
    <label for="passwordConfirmation">Password Confirmation</label><br>
    <input type="password" name="passwordConfirmation"  class="form-control col-md-4" id="passwordConfirmation">
  </div>

  <button type="submit" class="btn btn-primary">Register</button>
</form>
